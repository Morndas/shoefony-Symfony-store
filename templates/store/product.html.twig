{% extends 'layout.html.twig' %}

{% block title %} {{ product.name|capitalize }} {{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            {{ render(controller('App\\Controller\\StoreController::brandsMenu', {'currentBrandId': product.brand.id})) }}
        </div>
        <div class="col-md-9">
            <p class="lead">
                Fiche descriptive " {{ product.name|capitalize }} "
                <a href="{{ path('store_list') }}" class="btn btn-default pull-right">Retour aux produits</a>
            </p>
            <div class="row">
                <div class="thumbnail">
                    <img class="img-responsive" src="{{ asset(product.image.url) }}" alt="{{ product.image.alt }}">
                    <div class="caption-full">
                        {% for color in product.colors %}
                            <h4 class="pull-left"><span class="badge">{{ color.name }}</span></h4>
                        {% endfor %}
                        <br>
                        <h4 class="pull-right"><span class="badge">{{ product.price }} â‚¬</span></h4>
                        <h3>{{ product.name }}</h3>
                        <p>{{ product.description }}</p>
                        <p>{{ product.descriptionLongue }}</p>
                    </div>
                </div>

                <div class="well">
                    <p class="pull-right label label-success">Actuellement {{ product.comments.count }} avis</p>

                    {% for comment in product.comments | sort((a, b) => b.createdAt <=> a.createdAt) %}
                        <div class="row">
                            <div class="col-md-12">
                                <span class="label label-info">{{ comment.pseudo }}</span>
                                <span class="label label-default">{{ comment.user.username }}</span>
                                <span class="label label-default pull-right">{{ comment.createdAt|date('d-m-Y H:i:s') }}</span>
                                <p>{{ comment.message }}</p>
                            </div>
                        </div>

                        <hr>
                    {% endfor %}

                    <hr/>

                    <div>
                        <form>
                            <div class="form-group">
                                <label for="name">Votre nom</label>
                                <input type="text" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label for="message">Votre avis</label>
                                <textarea class="form-control" name="comment" rows="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-info">Envoyer mon avis</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
