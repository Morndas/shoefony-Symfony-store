{% extends 'layout.html.twig' %}

{% block title %}Nos produits {{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            {{ render(controller('App\\Controller\\StoreController::brandsMenu', {'currentBrandId': curent_brand_id ?? null})) }}
        </div>
        <div class="col-md-9">
            <p class="lead">Nos produits " Toutes les marques "</p>
            <div class="row text-center">
                {% for product in products %}
                    <div class="col-md-4 col-sm-6 hero-feature">
                        <div class="thumbnail">
                            <img src="{{ asset(product.image.url) }}" alt="{{ product.image.alt }}">
                            <div class="caption">
                                <h3>{{ product.name|capitalize }}</h3>
                                <p>{{ product.description }}</p>
                                <p>
                                    <span class="badge">{{ product.price }} €</span>
                                    <a href="{{ path('store_product', {'id': product.id, 'slug': product.name}) }}" class="btn btn-default">Voir la fiche</a>
                                </p>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="alert alert-warning">
                        Il n'y aucun produit ici...
                    </div>
                {% endfor %}
            </div>

            <div class="row text-center">
                <nav>
                    <ul class="pagination pagination-lg">
                        <li>
                            <a href="#" aria-label="Précédent">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="active">
                            <a href="#">1</a>
                        </li>
                        <li>
                            <a href="#">2</a>
                        </li>
                        <li>
                            <a href="#">3</a>
                        </li>
                        <li>
                            <a href="#">4</a>
                        </li>
                        <li>
                            <a href="#">5</a>
                        </li>
                        <li>
                            <a href="#" aria-label="Suivant">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}
